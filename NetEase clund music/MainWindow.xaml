                                        <TranslateTransform Y="-5"/>
                                        <RotateTransform Angle="225"/>
                                    </TransformGroup>
                                </Border.RenderTransform>
                            </Border>
                        </Grid>
                        <!--搜索历史&热搜榜-->
                        <Grid Width="400" Margin="0,20,120,0" Height="300" VerticalAlignment="Top" x:Name="searchModel" Visibility="Collapsed" Panel.ZIndex="2">
                            <Border Width="390" Background="{StaticResource popupBackground}" CornerRadius="1">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" Color="Black" BlurRadius="5" Opacity="0.5"/>
                                </Border.Effect>
                            </Border>
                            <Border Width="390" BorderThickness="0.2" BorderBrush="#50FFFFFF" CornerRadius="1">
                                <ScrollViewer>
                                    <ScrollViewer.Resources>
                                        <SolidColorBrush x:Key="ScrollBar.Static.Thumb" Color="#2F3134"/>
                                        <Style TargetType="ScrollBar" BasedOn="{StaticResource myScrollBara}">
                                        </Style>
                                    </ScrollViewer.Resources>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition/>
                                            <RowDefinition Height="3*"/>
                                        </Grid.RowDefinitions>
                                        <WrapPanel VerticalAlignment="Center" Margin="15,10">
                                            <TextBlock Text="搜索历史" Margin="0,0,10,0" FontSize="12"/>
                                            <Button Style="{StaticResource EmptyStyleInButton}" BorderThickness="0" FontFamily="{StaticResource iconFont}" 
                                               Content="&#xe6a7;" Foreground="{StaticResource FontColor}"/>
                                        </WrapPanel>

                                        <Button Style="{StaticResource EmptyStyleInButton}" BorderThickness="0" HorizontalAlignment="Right" Content="查看全部"
                                           Margin="0,0,10,0" Foreground="{StaticResource FontColor}" FontSize="10"/>

                                        <ListBox Grid.Row="1" ItemContainerStyle="{DynamicResource searchhistoryBox}" Background="Transparent" BorderThickness="0" Margin="15,0" PreviewMouseWheel="listbox_PreviewMouseWheel"
                                             ItemsPanel="{DynamicResource searchhistoryBoxPanel}" Width="360" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalAlignment="Left">
                                            <ListBox.Resources>
                                                <Style x:Key="searchhistoryBox" TargetType="{x:Type ListBoxItem}">
                                                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                                                    <Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
                                                    <Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="BorderBrush" Value="#80ffffff"/>
                                                    <Setter Property="Foreground" Value="{StaticResource FontColor}"/>
                                                    <Setter Property="BorderThickness" Value="1"/>
                                                    <Setter Property="FontSize" Value="10"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                    <Setter Property="Padding" Value="10,2,10,5"/>
                                                    <Setter Property="Margin" Value="0,5,5,5"/>
                                                    <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                                <Border x:Name="Bd" CornerRadius="2" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true">
                                                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Trigger.EnterActions>
                                                                            <BeginStoryboard>
                                                                                <Storyboard>
                                                                                    <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color" To="White"
                                                                                                Duration="0:0:0.15"/>
                                                                                    <ColorAnimation Storyboard.TargetProperty="Foreground.Color" To="White"
                                                                                                Duration="0:0:0.15"/>
                                                                                </Storyboard>
                                                                            </BeginStoryboard>
                                                                        </Trigger.EnterActions>
                                                                        <Trigger.ExitActions>
                                                                            <BeginStoryboard>
                                                                                <Storyboard>
                                                                                    <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color"
                                                                                                Duration="0:0:0.15"/>
                                                                                    <ColorAnimation Storyboard.TargetProperty="Foreground.Color"
                                                                                                Duration="0:0:0.15"/>
                                                                                </Storyboard>
                                                                            </BeginStoryboard>
                                                                        </Trigger.ExitActions>
                                                                    </Trigger>
                                                                    <Trigger Property="IsEnabled" Value="False">
                                                                        <Setter Property="TextElement.Foreground" TargetName="Bd" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                                <ItemsPanelTemplate x:Key="searchhistoryBoxPanel">
                                                    <WrapPanel IsItemsHost="True" Width="{Binding Width,RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
                                                </ItemsPanelTemplate>
                                            </ListBox.Resources>
                                            <ListBoxItem Content="Love the way"/>
                                            <ListBoxItem Content="i wanted you"/>
                                            <ListBoxItem Content="周杰伦"/>
                                            <ListBoxItem Content="Hop"/>
                                            <ListBoxItem Content="是但求其爱"/>
                                            <ListBoxItem Content="Jazz Hipop"/>
                                        </ListBox>

                                        <TextBlock Grid.Row="2" Text="热搜榜" VerticalAlignment="Center" FontSize="13" Margin="15,10"/>

                                        <ListBox Grid.Row="3" Background="Transparent" BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Disabled" PreviewMouseWheel="listbox_PreviewMouseWheel">
                                            <ListBox.Resources>
                                                <Style TargetType="{x:Type ListBoxItem}">
                                                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                                                    <Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
                                                    <Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="BorderBrush" Value="#80ffffff"/>
                                                    <Setter Property="Foreground" Value="{StaticResource FontColor}"/>
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                    <Setter Property="FontSize" Value="10"/>
                                                    <Setter Property="Height" Value="45"/>
                                                    <Setter Property="Padding" Value="0,5"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                    <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                                <Border Height="{TemplateBinding Height}" Padding="{TemplateBinding Padding}" x:Name="Bd" CornerRadius="2" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                                                                    <Grid>
                                                                        <Grid.RowDefinitions>
                                                                            <RowDefinition/>
                                                                            <RowDefinition/>
                                                                        </Grid.RowDefinitions>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition/>
                                                                            <ColumnDefinition Width="9*"/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <Border Grid.RowSpan="2">
                                                                            <TextBlock Text="1" Foreground="DarkRed" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                        <StackPanel Orientation="Horizontal" Grid.Column="1">
                                                                            <TextBlock Text="春夏秋冬" Foreground="{StaticResource FontColorb}" VerticalAlignment="Center"/>
                                                                            <TextBlock Text="1158378"  Margin="12,0" VerticalAlignment="Center" Foreground="{StaticResource FontColorc}"/>
                                                                            <TextBlock Text="&#xe776;" FontFamily="{StaticResource iconFont}"  FontSize="17" Foreground="DarkRed"/>
                                                                        </StackPanel>
                                                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="春天该很好，你若尚在场" VerticalAlignment="Center" Foreground="{StaticResource FontColorc}"/>
                                                                    </Grid>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#10000000"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsEnabled" Value="False">
                                                                        <Setter Property="TextElement.Foreground" TargetName="Bd" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ListBox.Resources>
                                            <ListBoxItem/>
                                            <ListBoxItem/>
                                            <ListBoxItem/>
                                            <ListBoxItem/>
                                            <ListBoxItem/>
                                        </ListBox>
                                    </Grid>
                                </ScrollViewer>
                            </Border>
                            <TextBlock FontFamily="{StaticResource iconFont}" Text="&#xea5e;" Width="15" Height="15" FontSize="14" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="{StaticResource popupBackground}">
                                <TextBlock.RenderTransform>
                                    <TranslateTransform Y="-10.5" X="20"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
