<Window x:Class="NetEase_clund_music.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:NetEase_clund_music"
        xmlns:Attached="clr-namespace:NetEase_clund_music.ResuourceHome.PropertyHelper"
        xmlns:commomControl="clr-namespace:NetEase_clund_music.Commom.CommomControl"
        xmlns:converter="clr-namespace:NetEase_clund_music.Tools.ConverterHelper"
        mc:Ignorable="d"
        Width="1030" Height="680" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" FontFamily="Comic sans ms"
        Background="Transparent" Loaded="WindowLoaded" Foreground="{StaticResource FontColor}">
    <Window.Resources>
        <FontFamily x:Key="iconFont">ResuourceHome\Fonts\iconfont.ttf#iconfont</FontFamily>

        <System:TimeSpan x:Key="loadAnimationBegintime">0:0:0</System:TimeSpan>

        <converter:StringToimagesource x:Key="StringToImage"/>

        <Storyboard x:Key="ShowModel" Timeline.DesiredFrameRate="60" Storyboard.TargetName="PlayData">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"  >
                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Collapsed}"/>
                <DiscreteObjectKeyFrame KeyTime="0:0:0.05" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Y"
                             To="0" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuinticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Width"
                             To="1020" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuinticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Height"
                             To="570" Duration="0:0:0.15">
                <DoubleAnimation.EasingFunction>
                    <QuinticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             To="1" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuinticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="HideModel" Timeline.DesiredFrameRate="60" Storyboard.TargetName="PlayData">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"  >
                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}"/>
                <DiscreteObjectKeyFrame KeyTime="0:0:0.5" Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Y"
                              Duration="0:0:0.28">
                <DoubleAnimation.EasingFunction>
                    <QuinticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Width"
                            Duration="0:0:0.21">
                <DoubleAnimation.EasingFunction>
                    <QuinticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Height"
                            Duration="0:0:0.25">
                <DoubleAnimation.EasingFunction>
                    <QuinticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             To="0" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>
    <Grid>
        <Border  Width="1020" Height="668" Background="{StaticResource MainColor}">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" Opacity="0.3" BlurRadius="10" Direction="0" Color="Black" />
            </Border.Effect>
        </Border>

        <Border x:Name="Header" Background="{StaticResource MainColor}" CornerRadius="1" Width="1020" Height="668" MouseDown="MoveWindow">
            <Grid>
                <Grid PreviewMouseDown="SuperRoute" >
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="11.8*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <!--Header-->
                    <Border BorderThickness="0,0,0,2.5" ButtonBase.Click="SuperClick" BorderBrush="{StaticResource HeaderBorderBrush}" Background="{StaticResource TitleBackground}" >
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{DynamicResource EmptyStyleInButton}" Padding="15,0" BorderThickness="0" Cursor="Hand">
                                    <Button.Resources>
                                        <CornerRadius x:Key="Button.Radius">2</CornerRadius>
                                    </Button.Resources>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="White" Width="20" Height="20" CornerRadius="10" Margin="0,0,5,0">
                                            <TextBlock FontFamily="{StaticResource iconFont}" Text="&#xe6a0;" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Replica Music" Foreground="White" FontFamily="Comic sans ms"  FontSize="15"/>
                                    </StackPanel>
                                </Button>
                                <StackPanel Orientation="Horizontal" Margin="60,0,15,0">
                                    <Button FontSize="15" Foreground="#99999999" VerticalAlignment="Center" 
                                            Command="{Binding LastContent}"
                                            Background="Transparent" BorderBrush="Black" 
                                            BorderThickness="1,1,1,1" Style="{StaticResource EmptyStyleInButton}">
                                        <TextBlock Text="&#xea5e;" FontFamily="{StaticResource iconFont}" RenderTransformOrigin="0.5,0.5">
                                            <TextBlock.RenderTransform>
                                                <RotateTransform Angle="-90" />
                                            </TextBlock.RenderTransform>
                                        </TextBlock>
                                    </Button>
                                    <Button FontSize="15" Foreground="#99999999" VerticalAlignment="Center" Background="Transparent" BorderBrush="Black" Style="{StaticResource EmptyStyleInButton}"
                                            Command="{Binding NextContent}">
                                        <TextBlock Text="&#xea5e;" FontFamily="{StaticResource iconFont}" RenderTransformOrigin="0.5,0.5">
                                            <TextBlock.RenderTransform>
                                                <RotateTransform Angle="90" />
                                            </TextBlock.RenderTransform>
                                        </TextBlock>
                                    </Button>
                                </StackPanel>
                                <Grid Width="210" Height="22">
                                    <Border Background="Black" CornerRadius="12" />
                                    <Grid Margin="6,0,0,0">
                                        <TextBox Background="Transparent" Tag="搜索音乐，视频，歌词，电台" CaretBrush="White" BorderThickness="0"  x:Name="HintTarget" Foreground="{StaticResource HeaderFontColor}" 
                                             VerticalContentAlignment="Center" Style="{DynamicResource SuperTextBox}" Text="{Binding Condition,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>
                                    <Button Style="{StaticResource EmptyStyleInButton}" HorizontalAlignment="Right" Content="&#xe651;" Command="{Binding QueryCommand}" FontFamily="{StaticResource iconFont}" BorderThickness="0"
                                Foreground="Gray" FontSize="15" Margin="0,0,5,0"/>
                                </Grid>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <Button Style="{StaticResource EmptyStyleInButton}" Width="30" Height="30" BorderThickness="0">
                                        <Button.Resources>
                                            <CornerRadius x:Key="Button.Radius">15</CornerRadius>
                                        </Button.Resources>
                                        <Button.Background>
                                            <ImageBrush ImageSource="ResuourceHome/images/wallhaven-42xp5g.jpg" Stretch="UniformToFill"/>
                                        </Button.Background>
                                    </Button>
                                    <Button Style="{StaticResource EmptyStyleInButton}" BorderThickness="0" Margin="5,0,0,0" x:Name="userDataButton">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Super2021" FontFamily="Comic sans ms" Foreground="{StaticResource HeaderFontColor}"/>
                                            <TextBlock Margin="5,0,0,0" FontFamily="{StaticResource iconFont}" Text="&#xea5e;" Foreground="{StaticResource HeaderFontColor}" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.55">
                                                <TextBlock.RenderTransform>
                                                    <RotateTransform Angle="180"/>
                                                </TextBlock.RenderTransform>
                                            </TextBlock>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                                <Button Style="{StaticResource EmptyStyleInButton}" VerticalAlignment="Center" Margin="10,0" Content="DemoHome" FontFamily="Ravie" 
                                        Foreground="{StaticResource HeaderFontColor}" BorderThickness="0" FontSize="11"/>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <StackPanel.Resources>
                                        <Style TargetType="Button" BasedOn="{StaticResource EmptyStyleInButton}">
                                            <Setter Property="FontFamily" Value="{StaticResource iconFont}"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Foreground" Value="{StaticResource HeaderFontColor}"/>
                                            <Setter Property="FontSize" Value="17"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </StackPanel.Resources>
                                    <Button  Content="&#xe743;" x:Name="switchcolorButton"/>
                                    <Border Margin="15,0" >
                                        <Grid>
                                            <Button Content="&#xe6a9;" HorizontalAlignment="Center" x:Name="messageModel"/>
                                            <Border Width="28" Height="15" Background="DarkRed" CornerRadius="8">
                                                <Border.RenderTransform>
                                                    <TranslateTransform Y="-8" X="13"/>
                                                </Border.RenderTransform>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.Foreground="White" TextBlock.FontSize="10">
                                                    <TextBlock Text="99"/>
                                                    <TextBlock Text="+"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Border>
                                    <Button  Content="&#xe6ab;"/>
                                    <Border Width="1" BorderBrush="Black" BorderThickness="1,0,0,0" Margin="15,0"/>
                                    <Button  Content="&#xe827;" FontSize="13"/>
                                    <Button Content="➖" Margin="10,0" FontSize="13"/>
                                    <Button Background="Transparent" BorderBrush="{StaticResource HeaderFontColor}" BorderThickness="2" Width="11" Height="11">
                                        <Button.Resources>
                                            <CornerRadius x:Key="Button.Radius">1</CornerRadius>
                                        </Button.Resources>
                                    </Button>
                                    <Button Content="❌" Margin="10,0" FontSize="13" Click="CloseWindow_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <!--Content-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        <!--ContentLeft-->
                        <Border BorderThickness="0,0,0.2,0" BorderBrush="#80999999" Background="#191B1F" Focusable="True">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <ScrollViewer>
                                    <ScrollViewer.Resources>
                                        <SolidColorBrush x:Key="ScrollBar.Static.Thumb" Color="#2F3134"/>
                                        <Style TargetType="ScrollBar" BasedOn="{StaticResource myScrollBara}">
                                        </Style>
                                    </ScrollViewer.Resources>

                                    <StackPanel >
                                        <StackPanel.RenderTransform>
                                            <TranslateTransform Y="0"/>
                                        </StackPanel.RenderTransform>

                                        <StackPanel.Resources>
                                            <SolidColorBrush x:Key="Item.MouseOver.Foreground" Color="White"/>
                                            <SolidColorBrush x:Key="Item.SelectedActive.Foreground" Color="White"/>

                                            <Style x:Key="TabListBox" TargetType="{x:Type ListBoxItem}">
                                                <Setter Property="SnapsToDevicePixels" Value="True"/>
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="Foreground"  Value="{StaticResource FontColor}"/>
                                                <Setter Property="FontFamily"  Value="Comic sans ms"/>
                                                <Setter Property="BorderThickness"  Value="0"/>
                                                <Setter Property="BorderBrush"  Value="{StaticResource ProgressColor}"/>
                                                <Setter Property="Cursor"  Value="Hand"/>
                                                <Setter Property="VerticalContentAlignment"  Value="Center"/>
                                                <Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
                                                <Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
                                                <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                            <Border x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}"
                                                        Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true">
                                                                <Grid>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBlock FontSize="17" Margin="15,6,10,6" Text="{TemplateBinding Tag}" FontFamily="{StaticResource iconFont}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                                        <Border x:Name="inForm" Width="7" Height="7" CornerRadius="3" Background="#FFB33333" Margin="4,-5,0,5" Opacity="0"/>
                                                                    </StackPanel>
                                                                    <Button x:Name="itemRightIcon" Style="{StaticResource EmptyStyleInButton}" VerticalAlignment="Center" BorderThickness="0" HorizontalAlignment="Right" 
                                                                FontFamily="{StaticResource iconFont}" Foreground="{StaticResource FontColor}" FontSize="18"/>
                                                                </Grid>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <MultiTrigger>
                                                                    <MultiTrigger.Conditions>
                                                                        <Condition Property="IsMouseOver" Value="True"/>
                                                                    </MultiTrigger.Conditions>
                                                                    <Setter Property="TextBlock.Foreground" TargetName="Bd" Value="{StaticResource Item.MouseOver.Foreground}"/>
                                                                </MultiTrigger>
                                                                <EventTrigger RoutedEvent="Selected">
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <ThicknessAnimation Storyboard.TargetProperty="BorderThickness" Storyboard.TargetName="Bd"
                                                                                    To="3,0,0,0" Duration="0:0:0.15"/>
                                                                            <ColorAnimation Storyboard.TargetProperty="Background.Color" Storyboard.TargetName="Bd"
                                                                                    To="#10FFFFFF" Duration="0:0:0.15"/>
                                                                            <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color" Storyboard.TargetName="Bd"
                                                                                    To="#B82525" Duration="0:0:0.15"/>
                                                                            <ColorAnimation Storyboard.TargetProperty="(TextBlock.Foreground).Color" 
                                                                                    To="#FFFFFF" Duration="0:0:0.15"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </EventTrigger>
                                                                <EventTrigger RoutedEvent="Unselected">
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <ThicknessAnimation Storyboard.TargetProperty="BorderThickness" Storyboard.TargetName="Bd"
                                                                                    Duration="0:0:0.15"/>
                                                                            <ColorAnimation Storyboard.TargetProperty="Background.Color" Storyboard.TargetName="Bd"
                                                                                    Duration="0:0:0.15"/>
                                                                            <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color" Storyboard.TargetName="Bd"
                                                                                    Duration="0:0:0.15"/>
                                                                            <ColorAnimation Storyboard.TargetProperty="(TextBlock.Foreground).Color"
                                                                                    Duration="0:0:0.15"/>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </EventTrigger>

                                                                <Trigger Property="IsEnabled" Value="False">
                                                                    <Setter Property="TextElement.Foreground" TargetName="Bd" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                                                                </Trigger>
                                                                <DataTrigger Binding="{Binding Path=(Attached:Btn_Attached.Inform),RelativeSource={RelativeSource Self}}" Value="True">
                                                                    <Setter Property="Opacity" TargetName="inForm" Value="1"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Path=(Attached:Btn_Attached.Cardiac),RelativeSource={RelativeSource Self}}" Value="True">
                                                                    <Setter Property="Content" TargetName="itemRightIcon" Value="&#xe61f;"/>
                                                                    <Setter Property="ToolTip" TargetName="itemRightIcon" Value="开启心动模式"/>
                                                                </DataTrigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>

                                            <Style TargetType="ListBox">
                                                <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Disabled"/>
                                            </Style>
                                        </StackPanel.Resources>

                                        <Border>
                                            <TextBlock Text="推荐" Foreground="{StaticResource HeaderFontColor}" Padding="10,8" FontFamily="Comic sans ms"/>
                                        </Border>

                                        <ListBox PreviewMouseWheel="listbox_PreviewMouseWheel"  ItemContainerStyle="{StaticResource TabListBox}" Background="Transparent" BorderThickness="0" x:Name="oneList" 
                                                 SelectionChanged="oneList_SelectionChanged">
                                            <ListBoxItem Content="发现音乐" Tag="&#xe63a;"/>
                                            <ListBoxItem Content="私人FM" Tag="&#xe720;"/>
                                            <ListBoxItem Content="LOOK 直播" Tag="&#xe62d;"/>
                                            <ListBoxItem Content="视频" Tag="&#xe71f;"/>
                                            <ListBoxItem Content="朋友" Tag="&#xe61d;" Attached:Btn_Attached.Inform="True"/>
                                        </ListBox>

                                        <Border Margin="0,10,0,0">
                                            <TextBlock Text="我的音乐" Foreground="{StaticResource HeaderFontColor}" Padding="10,8"  FontFamily="Comic sans ms"/>
                                        </Border>

                                        <ListBox  PreviewMouseWheel="listbox_PreviewMouseWheel" ItemContainerStyle="{StaticResource TabListBox}" Background="Transparent" BorderThickness="0" x:Name="twoList" SelectionChanged="oneList_SelectionChanged">
                                            <ListBoxItem Content="本地音乐" Tag="&#xe611;"/>
                                            <ListBoxItem Content="下载管理" Tag="&#xe61b;"/>
                                            <ListBoxItem Content="我的音乐云盘" Tag="&#xe62a;"/>
                                            <ListBoxItem Content="我的收藏" Tag="&#xe66b;"/>
                                        </ListBox>

                                        <Grid Margin="0,10,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition Height="auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid>
                                                <TextBlock Text="创建的歌单" Foreground="{StaticResource FontColor}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                                <Button Padding="10,8" Style="{StaticResource EmptyStyleInButton}" BorderThickness="0" HorizontalContentAlignment="Right" >
                                                    <TextBlock Text="&#xea5e;" Foreground="{StaticResource FontColor}" FontFamily="{StaticResource iconFont}" RenderTransformOrigin="0.5,0.5">
                                                        <TextBlock.RenderTransform>
                                                            <RotateTransform Angle="90"/>
                                                        </TextBlock.RenderTransform>
                                                    </TextBlock>
                                                </Button>
                                                <Button BorderThickness="0" Background="Transparent" x:Name="addMusicList" Click="ShowModelSong"
                                        HorizontalAlignment="Right" Margin="0,0,30,0" Style="{StaticResource EmptyStyleInButton}">
                                                    <Button.Resources>
                                                        <CornerRadius x:Key="Button.Radius">8</CornerRadius>
                                                    </Button.Resources>
                                                    <Grid>
                                                        <Border Width="15" Height="15" CornerRadius="8" Background="#99999999"/>
                                                        <TextBlock Text="+" VerticalAlignment="Center" Margin="1,0,0,3"
                                                   HorizontalAlignment="Center" FontSize="18" FontWeight="SemiBold"/>
                                                    </Grid>
                                                </Button>
                                            </Grid>
                                            <ListBox PreviewMouseWheel="listbox_PreviewMouseWheel" Grid.Row="1" Background="Transparent" BorderThickness="0" ItemContainerStyle="{DynamicResource TabListBox}" x:Name="threeList" SelectionChanged="oneList_SelectionChanged">
                                                <ListBoxItem Content="我喜欢的音乐" Tag="&#xe6ca;" Attached:Btn_Attached.Cardiac="True"/>
                                            </ListBox>
                                        </Grid>
                                        <Grid Margin="0,10,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition Height="auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid>
                                                <TextBlock Text="收藏的歌单" Foreground="{StaticResource FontColor}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                                <Button Padding="10,8" Style="{StaticResource EmptyStyleInButton}" BorderThickness="0" HorizontalContentAlignment="Right" >
                                                    <TextBlock Text="&#xea5e;" Foreground="{StaticResource FontColor}" FontFamily="{StaticResource iconFont}" RenderTransformOrigin="0.5,0.5">
                                                        <TextBlock.RenderTransform>
                                                            <RotateTransform Angle="90"/>
                                                        </TextBlock.RenderTransform>
                                                    </TextBlock>
                                                </Button>
                                            </Grid>
                                            <ListBox PreviewMouseWheel="listbox_PreviewMouseWheel" Grid.Row="1" Background="Transparent" BorderThickness="0" ItemContainerStyle="{DynamicResource TabListBox}" x:Name="fourList" SelectionChanged="oneList_SelectionChanged">
                                                <ListBoxItem Content="Super Music" Tag="&#xe636;"/>
                                                <ListBoxItem Content="Super Music" Tag="&#xe636;"/>
                                            </ListBox>
                                        </Grid>
                                    </StackPanel>
                                </ScrollViewer>

                                <Border Grid.Row="1" Panel.ZIndex="2" BorderThickness="0" x:Name="MusicData" MouseDown="MusicData_MouseDown">
                                    <Border.Triggers>
                                        <EventTrigger RoutedEvent="MouseDown">
                                            <BeginStoryboard  Storyboard="{StaticResource ShowModel}"/>
                                        </EventTrigger>
                                    </Border.Triggers>
                                    <Border  Padding="4" BorderThickness="0,0.2" BorderBrush="#80999999" x:Name="songDataBorder">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="Height" Value="55"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsFm}" Value="True">
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetProperty="Height" To="0"
                                                                                 Duration="0:0:0.15"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                        <DataTrigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetProperty="Height"
                                                                                Duration="0:0:0.15"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.ExitActions>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="3*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid>
                                                <Border CornerRadius="2">
                                                    <Border.Background>
                                                        <ImageBrush ImageSource="{Binding PlaySong.album.blurPicUrl,Converter={StaticResource StringToImage}}" Stretch="UniformToFill"/>
                                                    </Border.Background>
                                                </Border>
                                                <Border Background="Transparent" Width="47" Height="47" x:Name="HideBigoperation" CornerRadius="2">
                                                    <Border.Triggers>
                                                        <EventTrigger RoutedEvent="MouseEnter">
                                                            <BeginStoryboard>
                                                                <Storyboard >
                                                                    <DoubleAnimation To="47" Duration="0:0:0.15" BeginTime="0:0:0.15" Storyboard.TargetName="arrowsHide" Storyboard.TargetProperty="Width"/>
                                                                    <DoubleAnimation To="47" Duration="0:0:0.15" BeginTime="0:0:0.15" Storyboard.TargetName="arrowsHide" Storyboard.TargetProperty="Height"/>
                                                                    <ColorAnimation To="#80000000" Duration="0:0:0.15" Storyboard.TargetProperty="Background.Color"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger>
                                                        <EventTrigger RoutedEvent="MouseLeave">
                                                            <BeginStoryboard>
                                                                <Storyboard >
                                                                    <DoubleAnimation Duration="0:0:0.15" Storyboard.TargetName="arrowsHide" Storyboard.TargetProperty="Width"/>
                                                                    <DoubleAnimation Duration="0:0:0.15" Storyboard.TargetName="arrowsHide" Storyboard.TargetProperty="Height"/>
                                                                    <ColorAnimation Duration="0:0:0.15" BeginTime="0:0:0.15" Storyboard.TargetProperty="Background.Color"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger>
                                                    </Border.Triggers>
                                                    <Grid>
                                                        <Grid Width="0" Height="0" x:Name="arrowsHide">
                                                            <TextBlock Text="&#xe776;" Foreground="{StaticResource TitleFontColor}" VerticalAlignment="Top" HorizontalAlignment="Left" FontFamily="{StaticResource iconFont}" FontSize="16" RenderTransformOrigin="0.5,0.5">
                                                                <TextBlock.RenderTransform>
                                                                    <RotateTransform Angle="-45"/>
                                                                </TextBlock.RenderTransform>
                                                            </TextBlock>
                                                            <TextBlock Text="&#xe776;" Foreground="{StaticResource TitleFontColor}" VerticalAlignment="Top" HorizontalAlignment="Right" FontFamily="{StaticResource iconFont}" FontSize="16" RenderTransformOrigin="0.5,0.5">
                                                                <TextBlock.RenderTransform>
                                                                    <RotateTransform Angle="45"/>
                                                                </TextBlock.RenderTransform>
                                                            </TextBlock>
                                                            <TextBlock Text="&#xe776;" Foreground="{StaticResource TitleFontColor}" VerticalAlignment="Bottom" HorizontalAlignment="Left" FontFamily="{StaticResource iconFont}" FontSize="16" RenderTransformOrigin="0.5,0.5">
                                                                <TextBlock.RenderTransform>
                                                                    <RotateTransform Angle="-145"/>
                                                                </TextBlock.RenderTransform>
                                                            </TextBlock>
                                                            <TextBlock Text="&#xe776;" Foreground="{StaticResource TitleFontColor}" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontFamily="{StaticResource iconFont}" FontSize="16" RenderTransformOrigin="0.5,0.5">
                                                                <TextBlock.RenderTransform>
                                                                    <RotateTransform Angle="145"/>
                                                                </TextBlock.RenderTransform>
